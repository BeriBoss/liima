<databaseChangeLog logicalFilePath="liquibase/changesets/data/changesets/data/permissionfix.xml"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet author="tphilipona" id="fixpermissions14529-functions">

        <!-- AmwFunctions -->
        <insert tableName="TAMW_PERMISSION">
            <column name="ID" valueComputed="(SELECT NEXT_VAL FROM SAMW_SEQUENCES WHERE SEQ_NAME = 'permissionId')" />
            <column name="VALUE" value="MANAGE_AMW_APP_INSTANCE_FUNCTIONS"></column>
            <column name="V" valueNumeric="0" />
        </insert>

        <insert tableName="TAMW_ROLE_PERMISSION">
            <column name="ROLES_ID" valueComputed="(SELECT ID FROM TAMW_ROLE WHERE NAME = 'app_developer')" />
            <column name="PERMISSIONS_ID" valueComputed="(SELECT ID FROM TAMW_PERMISSION WHERE VALUE = 'MANAGE_AMW_APP_INSTANCE_FUNCTIONS')" />
        </insert>

        <update tableName="SAMW_SEQUENCES">
            <column name="NEXT_VAL" type="INTEGER"
                    valueComputed="(SELECT NEXT_VAL+1 FROM SAMW_SEQUENCES WHERE SEQ_NAME='permissionId')" />
            <where>SEQ_NAME='permissionId'</where>
        </update>

    </changeSet>

    <changeSet author="tphilipona" id="fixpermissions14529-propertiesPopUp">

        <delete tableName="TAMW_ROLE_PERMISSION">
            <where>PERMISSIONS_ID = (SELECT ID FROM TAMW_PERMISSION WHERE VALUE = 'MANAGE_PROP_POPUP')</where>
        </delete>
        <delete tableName="TAMW_PERMISSION">
            <where>VALUE = 'MANAGE_PROP_POPUP'</where>
        </delete>
    </changeSet>
    <changeSet author="tphilipona" id="fixpermissionsremove_deprecated">

        <delete tableName="TAMW_ROLE_PERMISSION">
            <where>PERMISSIONS_ID = (SELECT ID FROM TAMW_PERMISSION WHERE VALUE = 'CREATE_NEW_VERSION')</where>
        </delete>
        <delete tableName="TAMW_PERMISSION">
            <where>VALUE = 'CREATE_NEW_VERSION'</where>
        </delete>

        <delete tableName="TAMW_ROLE_PERMISSION">
            <where>PERMISSIONS_ID = (SELECT ID FROM TAMW_PERMISSION WHERE VALUE = 'ADD_REL_RESTYPE')</where>
        </delete>
        <delete tableName="TAMW_PERMISSION">
            <where>VALUE = 'ADD_REL_RESTYPE'</where>
        </delete>

        <delete tableName="TAMW_ROLE_PERMISSION">
            <where>PERMISSIONS_ID = (SELECT ID FROM TAMW_PERMISSION WHERE VALUE = 'SHOW_VALUE')</where>
        </delete>
        <delete tableName="TAMW_PERMISSION">
            <where>VALUE = 'SHOW_VALUE'</where>
        </delete>
    </changeSet>
</databaseChangeLog>