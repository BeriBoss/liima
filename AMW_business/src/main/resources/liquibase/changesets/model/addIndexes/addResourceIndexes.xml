    <changeSet author="rgalante" id="addResourceContextIndex">
        <preConditions onFail="MARK_RAN">
            <dbms type="oracle"/>
            <sqlCheck expectedResult="0">SELECT COUNT(*) FROM V$VERSION where BANNER like 'Oracle%Express Edition%'</sqlCheck>
        </preConditions>
        <createIndex indexName="he_TAMW_RESOURCECONTEXT_i1" tableName="TAMW_RESOURCECONTEXT">
            <column name="id"/>
            <column name="resource_id"/>
            <column name="context_id"/>
        </createIndex>
        <modifySql>
            <append value=" ONLINE"/>
        </modifySql>
    </changeSet>
